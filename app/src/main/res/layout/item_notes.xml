<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_margin = "10dp"
        app:cardCornerRadius = "10dp"
        app:cardBackgroundColor = "#707070">

        <View
            android:id = "@+id/viewPriority"
            android:layout_width = "20dp"
            android:layout_height = "20dp"
            android:layout_gravity = "end"
            android:background = "@drawable/red_dot"
            android:layout_margin = "10dp"/>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "10dp"
            android:orientation = "vertical">

            <TextView
                android:id = "@+id/notesTitle"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:textColor = "@color/white"
                android:fontFamily = "@font/boldfont"
                android:text = "@string/app_name"
                app:maxLines = "1"
                android:textSize = "17sp"/>

            <TextView
                android:id = "@+id/notesSubTitle"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:textColor = "#D8D8D8"
                android:fontFamily = "@font/regularfont"
                android:layout_marginTop = "5dp"
                android:text = "bdfgusdgfugugaugui uifggfuiguigfluiahguiuvbjcdskbjbjbvsbkjvlquvbbvjkbq"
                android:textSize = "14sp"/>

            <TextView
                android:id = "@+id/notesDate"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:textColor = "@color/white"
                android:layout_marginTop = "10dp"
                android:fontFamily = "@font/boldfont"
                android:text = "23 March 2021"
                app:maxLines = "1"
                android:textSize = "16sp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>